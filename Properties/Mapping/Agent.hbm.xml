<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping auto-import="true" 
                   xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   xmlns="urn:nhibernate-mapping-2.2"> 

  <class name="Netgao.Telephony.Workflow.Domain.Agent, Netgao.Telephony.Workflow" 
         table="Telephony_Agents" lazy="false">

    <id name="Id" access="property" column="ID" type="Int32">
      <generator class="foreign" >
        <param name="property">User</param>
      </generator>
    </id>

    <one-to-one name="User" access="property" class="Netgao.Security.User, Netgao.Security" constrained="true" cascade="none" />
 
    <property name="UserName" access="property" type="String">
      <column name="USER_NAME" length="32"/>
    </property>

    <property name="Password" access="property" type="String">
      <column name="PASSWORD" length="32"/>
    </property>

    <property name="NickName" access="property" type="String">
      <column name="NICK_NAME" length="255"  />
    </property>

    <property name="Email" access="property" type="String">
      <column name="EMAIL" length="40"/>
    </property>

    <property name="Telephone" access="property" type="String">
      <column name="TELEPHONE" length="20"/>
    </property>

    <property name="Extension" access="property" type="String">
      <column name="EXTENSION" length="20"/>
    </property>

    <property name="LastLoginDate" access="property" type="DateTime">
      <column name="LAST_LOGIN_DATE"/>
    </property>

    <property name="LastPasswordChangedDate" access="property" type="DateTime">
      <column name="LAST_PWD_CHANGE_DATE"/>
    </property>

    <property name="IsSupervisor" access="property" type="Boolean">
      <column name="IS_SUPERVISOR"/>
    </property>

    <property name="IsActive" access="property" type="Boolean">
      <column name="IS_ACTIVE"/>
    </property>

  </class>
  <!--foreign-key="USER_NAME" property-ref="UserName"-->
</hibernate-mapping>
